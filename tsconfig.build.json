{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "build/src",
    "skipLibCheck": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "rewriteRelativeImportExtensions": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/client/**/*"]
}
